<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.weller.successapp.AppActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_toEndOf="@+id/textView7"
        android:src="@drawable/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_textview"
        android:text="вопрос"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_above="@+id/radio_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/radio_group"
        android:layout_alignEnd="@+id/radio_group"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ИмяЛюбимоеМое"
        android:id="@+id/name_textview"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_above="@+id/question_textview"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/radio_group"
        android:layout_alignEnd="@+id/radio_group"
        android:typeface="serif" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/dalee_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/var_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/var_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/var_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/var_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:id="@+id/dalee_button"
        android:onClick="onDalee"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radio_group"
        android:layout_alignEnd="@+id/radio_group"
        android:background="#7ed2d7"
        android:typeface="serif"
        android:width="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ИмяЛюбимоеМое"
        android:id="@+id/name2_textview"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_below="@+id/question2_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question2_textview"
        android:text="вопрос"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/dalee2_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/var_a_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/var_b_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/var_v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/var_g_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:id="@+id/dalee2_button"
        android:onClick="onDalee2"
        android:background="#7ed2d7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:width="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:id="@+id/cur_score1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:id="@+id/cur_score2"
        android:layout_alignTop="@+id/dalee2_button"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup"
        android:textSize="23dp" />

    <!--<fragment
        class="com.example.user.successapp.PlayerFragment"
        android:id="@+id/frag1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <fragment
        class="com.example.user.successapp.PlayerFragment"
        android:id="@+id/frag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag1"/>-->

</RelativeLayout>

