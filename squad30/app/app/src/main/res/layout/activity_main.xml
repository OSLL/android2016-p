<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.myapplication.MainActivity"
    android:scrollIndicators="right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start with capturing the photo"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@+id/myFAB"
        android:scrollIndicators="end"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:gravity="center"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:autoText="false" />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myFAB"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:borderWidth="0dp"
        android:scaleType="center"
        android:elevation="5dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal|bottom"
        fab:rippleColor="@color/colorAccent"
        fab:backgroundTint="@color/colorAccent"
        fab:fabSize="normal"
        android:clickable="true"
        android:longClickable="true"
        android:src="@drawable/ic_camera_24dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:focusable="false" />

    <requestFocus
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <requestFocus
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <requestFocus
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <requestFocus
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/myFAB"
        android:layout_toStartOf="@+id/myFAB" />

</RelativeLayout>
