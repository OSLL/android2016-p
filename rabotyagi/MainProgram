import java.util.ArrayList;
import java.util.List;

public class MainProgram {
    public static void main(String[] args) {
        IntegerValue integervalue = new IntegerValue();

        CurrentConditionsDisplay currentDisplay = new CurrentConditionsDisplay(integervalue);
        integervalue.setValues(745);
        integervalue.setValues(6);
        integervalue.setValues(45);
            }
}

interface Observer {
    void update (int value);
}

interface Observable {
    void registerObserver(Observer o);
    void removeObserver(Observer o);
    void notifyObservers();
}

class IntegerValue implements Observable {
    private ArrayList<Observer> observers;
    private int value;
    
    public IntegerValue() {
        observers = new ArrayList<Observer>();
    }
    
    public void registerObserver(Observer o) {
        observers.add(o);
    }

    public void removeObserver(Observer o) {
        observers.remove(o);
    }

    public void notifyObservers() {
        for (Observer observer : observers)
            observer.update(value);
    }
         
    public void setValues(int value) {
        this.value = value;
        notifyObservers();
    }
}

class CurrentConditionsDisplay implements Observer {
    private int value;
    private IntegerValue integervalue;
    
    public CurrentConditionsDisplay(IntegerValue integervalue) {
        this.integervalue = integervalue;
        integervalue.registerObserver(this);
    }
    

    public void update(int value) {
        this.value = value;
                Printer();
    }

    public void Printer() {
        System.out.println(value);
    }
}
